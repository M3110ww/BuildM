<Window x:Class="BuildM.IGU.Administrador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administrador" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
         WindowState="Maximized">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/BuildM;component/Recursos/FondoAdmin.png"
                        Stretch="Fill"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="332"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="220,240,0,0" Grid.ColumnSpan="2">
            <Button Content="INVENTARIO" Name="BtnInventario"
                    Click="BtnInventario_Click"
                    Margin="0,10" Height="60" Width="200" FontSize="30" 
                    Background="#1e3a5f" Foreground="White" FontWeight="Bold" 
                    BorderBrush="Transparent" BorderThickness="0"/>
            <Button Content="SOLICITUDES" Name="BtnSolicitudes"
                    Click="BtnSolicitudes_Click"
                    Margin="0,10" Height="60" Width="200" FontSize="30" 
                    Background="#1e3a5f" Foreground="White" FontWeight="Bold"
                    BorderBrush="Transparent" BorderThickness="0"/>
            <Button Content="REPORTES" Name="BtnReportes"
                    Click="BtnReportes_Click"
                    Margin="0,10" Height="60" Width="200" FontSize="30" 
                    Background="#1e3a5f" Foreground="White" FontWeight="Bold"
                    BorderBrush="Transparent" BorderThickness="0"/>
        </StackPanel>

        <Frame x:Name="frameContenido"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Margin="40,120,40,40"/>

        <Label x:Name="lblTitulo"
               Grid.Column="1" 
               Content="INVENTARIO" 
               FontSize="60" 
               FontWeight="Bold" 
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="465,82,0,0"
               Foreground="Black"/>
    </Grid>
</Window>
