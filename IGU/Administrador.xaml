<Window x:Class="BuildM.IGU.Administrador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administrador" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Fondo principal -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/BuildM;component/Recursos/FondoAdmin.png"
                        Stretch="Fill"/>
        </Grid.Background>

        <!-- Divisiones: menú lateral (col 0), contenido (col 1) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="332"/>
            <!-- Menú lateral -->
            <ColumnDefinition/>
            <!-- Contenido dinámico -->
        </Grid.ColumnDefinitions>

        <!-- Menú lateral alineado y centrado -->
        <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="213,262,0,0" Grid.ColumnSpan="2">
            <Button Content="Inventario" Name="btnInventario"
                    Click="BtnInventario_Click"
                    Margin="0,10" Height="60" Width="200" FontSize="30" 
                    Background="#1e3a5f" Foreground="White" FontWeight="Bold" 
                    BorderBrush="Transparent" BorderThickness="0"/>
            <Button Content="Solicitudes" Name="btnSolicitudes"
                    Click="BtnSolicitudes_Click"
                    Margin="0,10,0,10" Height="40"
                    Background="#2C3E50" Foreground="White" FontWeight="Bold"/>
            <Button Content="Proyectos" Name="btnProyectos"
                    Click="BtnProyectos_Click"
                    Margin="0,10,0,10" Height="40"
                    Background="#2C3E50" Foreground="White" FontWeight="Bold"/>
                    Click="BtnProyectos_Click"
                    Margin="0,10,0,10" Height="40"
                    Background="#2C3E50" Foreground="White" FontWeight="Bold"/>
                    Click="BtnProyectos_Click"
                    Margin="0,10,0,10" Height="40"
                    Background="#2C3E50" Foreground="White" FontWeight="Bold"/>
                    Click="BtnProyectos_Click"
                    Margin="0,10,0,10" Height="40"
                    Background="#2C3E50" Foreground="White" FontWeight="Bold"/>
                    Click="BtnProyectos_Click"
                    Margin="0,10,0,10" Height="40"
                    Background="#2C3E50" Foreground="White" FontWeight="Bold"/>
                    Click="BtnProyectos_Click"
                    Margin="0,10,0,10" Height="40"
                    Background="#2C3E50" Foreground="White" FontWeight="Bold"/>
                    Click="BtnProyectos_Click"
                    Margin="0,10,0,10" Height="40"
                    Background="#2C3E50" Foreground="White" FontWeight="Bold"/>
                    Click="BtnProyectos_Click"
                    Margin="0,10,0,10" Height="40"
                    Background="#2C3E50" Foreground="White" FontWeight="Bold"/>
                    Click="BtnProyectos_Click"
                    Margin="0,10,0,10" Height="40"
                    Background="#2C3E50" Foreground="White" FontWeight="Bold"/>
            <Button Content="Reportes" Name="btnReportes"
                    Click="BtnReportes_Click"
                    Margin="0,10" Height="60" Width="200" FontSize="30"
                    Background="#1e3a5f" Foreground="White" FontWeight="Bold"
                    BorderBrush="Transparent" BorderThickness="0"/>
        </StackPanel>

        <!-- Área de contenido dinámico -->
        <Frame x:Name="frameContenido"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Margin="40,120,40,40"/>

        <!-- Título dinámico centrado -->
        <Label x:Name="lblTitulo"
               Grid.Column="1" 
               Content="Inventario" 
               FontSize="60" 
               FontWeight="Bold" 
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="505,83,0,0"
               Foreground="Black"/>
    </Grid>
</Window>
