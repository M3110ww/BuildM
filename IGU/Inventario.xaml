<Page x:Class="BuildM.IGU.Inventario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventario de Materiales" Height="520" Width="900" MinWidth="700">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Formulario -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8" VerticalAlignment="Top" >
            <StackPanel Orientation="Vertical" Margin="0,0,8,0">
                <TextBlock>Nombre</TextBlock>
                <TextBox x:Name="txtNombre" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,0,8,0">
                <TextBlock>Descripción</TextBlock>
                <TextBox x:Name="txtDescripcion" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,0,8,0">
                <TextBlock>Stock</TextBlock>
                <TextBox x:Name="txtStock" Width="80"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                <TextBlock>Costo</TextBlock>
                <TextBox x:Name="txtCosto" Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <Button x:Name="btnAdd" Content="Agregar" Click="btnAdd_Click" Width="90" Margin="0,0,0,6"/>
                <Button x:Name="btnUpdate" Content="Actualizar" Click="btnUpdate_Click" Width="90" Margin="0,0,0,6"/>
                <Button x:Name="btnDelete" Content="Eliminar" Click="btnDelete_Click" Width="90" Margin="0,0,0,6"/>
            </StackPanel>
        </StackPanel>

        <!-- Tabla -->
        <DataGrid x:Name="dgMateriales" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionChanged="dgMateriales_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdMaterial}" Width="60"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="220"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="80"/>
                <DataGridTextColumn Header="Costo" Binding="{Binding Costo, StringFormat=N2}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
