<Window x:Class="BuildM.IGU.DetalleSolicitud"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de Solicitud"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Detalles de la Solicitud"
                   FontSize="20" FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <DataGrid x:Name="TablaDetalles"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,0,0,10"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F5F5F5"
                  RowBackground="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Material" Binding="{Binding NombreMaterial}" Width="*"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding DescripcionMaterial}" Width="2*"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="80"/>
                <DataGridTextColumn Header="Precio Unitario" Binding="{Binding PrecioUnitario, StringFormat=C}" Width="120"/>
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="Total: "
                       FontWeight="Bold"
                       FontSize="14"
                       VerticalAlignment="Center"/>
            <TextBlock x:Name="TxtTotal"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="DarkBlue"
                       VerticalAlignment="Center"
                       Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
