<Window x:Class="BuildM.IGU.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="328" Width="413"
        WindowStartupLocation="CenterScreen">

    <Canvas Height="301" VerticalAlignment="Top">
        <!-- Fondo -->
        <Canvas.Background>
            <ImageBrush ImageSource="pack://application:,,,/BuildM;component/Recursos/Fondobuild.png" Stretch="Fill"/>
        </Canvas.Background>

        <!-- Correo -->
        <TextBlock Text="Correo:" Foreground="Black" FontWeight="Bold"
                   Canvas.Left="130" Canvas.Top="111" Height="16" Width="41"/>
        <TextBox x:Name="txtCorreo" Width="140" Height="20"
                 Canvas.Left="130" Canvas.Top="132"/>

        <!-- Contraseña -->
        <TextBlock Text="Contraseña:" Foreground="Black" FontWeight="Bold"
                   Canvas.Left="130" Canvas.Top="159" Height="16" Width="67"/>
        <PasswordBox x:Name="txtPassword" Width="140" Height="20"
                     Canvas.Left="130" Canvas.Top="180"/>

        <!-- Botones -->
        <Button Content="Login" Width="74" Height="20"
                Canvas.Left="163" Canvas.Top="211"
                Click="BtnLogin_Click"/>

        <Button Content="Registro" Width="58" Height="20"
                Canvas.Left="171" Canvas.Top="244"
                Click="BtnRegistro_Click"/>
    </Canvas>
</Window>