<Window x:Class="BuildM.IGU.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/BuildM;component/Recursos/Fondobuild.png" 
                        Stretch="Fill"/>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top"
            Background="#DDFFFFFF" Width="500" Height="300" 
            Margin="0,350,0,0" Orientation="Vertical">

            <TextBlock Text="Correo:" Foreground="Black" FontWeight="Bold" 
               FontSize="20" HorizontalAlignment="Left" Margin="0,10,0,5"/>
            <TextBox x:Name="txtCorreo" Width="350" VerticalContentAlignment="Center"  BorderBrush="#fbc215" BorderThickness="2" Height="36" Margin="0,0,0,20"/>

            <TextBlock Text="Contraseña:" Foreground="Black" FontWeight="Bold" 
               FontSize="20" HorizontalAlignment="Left" Margin="0,10,0,5"/>
            <PasswordBox x:Name="txtPassword" VerticalContentAlignment="Center" BorderBrush="#fbc215" BorderThickness="2" Width="350" Height="36" Margin="0,0,0,30"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Login" Width="140" Height="42" Margin="10,0" Click="BtnLogin_Click"
                Background="#fbc215" Foreground="Black" BorderThickness="0" BorderBrush="Transparent"
                FontSize="19" FontWeight="Bold" Cursor="Hand"/>
                <Button Content="Registro" Width="140" Height="42" Margin="10,0"
                Background="#fbc215" Foreground="Black" Click="BtnRegistro_Click" BorderThickness="0" BorderBrush="Transparent" 
                FontSize="19" FontWeight="Bold" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
