<Window x:Class="BuildM.IGU.Solicitud"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Solicitud de Materiales" Height="500" Width="850"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="pack://application:,,,/BuildM;component/Recursos/Solicitudes.png"
                        Stretch="Fill"/>
        </Canvas.Background>

        <Label Content="Nombre del Proyecto:" Canvas.Left="481" FontSize="20"  Canvas.Top="257" FontWeight="Bold" Height="47" Width="234" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="txtNombreProyecto" FontSize="14" Width="330" Height="22" 
                 Canvas.Left="712" Canvas.Top="268" VerticalContentAlignment="Center"  HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <Label Content="Material:" Canvas.Left="481" FontSize="20" Canvas.Top="309" FontWeight="Bold" Height="35" Width="103" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbMateriales" FontSize="14" Width="444" Height="22"
                  Canvas.Left="598" Canvas.Top="317" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <Label Content="Cantidad:" Canvas.Left="481" FontSize="20" Canvas.Top="349" FontWeight="Bold" Height="37" Width="103" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="txtCantidad"  FontSize="14" Width="117" Height="22"
                 Canvas.Left="598" Canvas.Top="356" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <Button Content="Agregar" Canvas.Left="762" Canvas.Top="352" BorderBrush="Transparent" FontWeight="Bold" FontSize="20"
                Width="116" Height="30" Background="#fbc215" Foreground="Black"  
                Click="BtnAgregar_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>


        <Button Content="Enviar" Canvas.Left="618" Canvas.Top="642" FontSize="20"
                Width="97" Height="38" Background="#2ecc71" BorderBrush="Transparent" Foreground="White"
                Click="BtnEnviar_Click" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Button Content="Cancelar" Canvas.Left="858" Canvas.Top="642" FontSize="20"
                Width="95" Height="38" Background="#e74c3c" BorderBrush="Transparent" Foreground="White"
                Click="BtnCancelar_Click" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <DataGrid x:Name="dgSolicitud" 
          Canvas.Left="210" Canvas.Top="408"
          Width="1135" Height="227"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          IsReadOnly="True"
          HorizontalAlignment="Center" 
          VerticalAlignment="Top"
          ColumnHeaderHeight="35"
          BorderBrush="Black"
          BorderThickness="2">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#032445"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Material" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="80"/>
                <DataGridTextColumn Header="Precio Unitario" Binding="{Binding Precio}" Width="100"/>
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label x:Name="lblTotal" Content="Total: $0.00" 
               FontWeight="Bold" FontSize="20"
               Canvas.Left="893" Canvas.Top="355" Height="35" Width="149" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Canvas>
</Window>
