<Window x:Class="BuildM.IGU.Solicitud"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Solicitud de Materiales" Height="500" Width="850"
        WindowStartupLocation="CenterScreen">

    <Canvas>
        <!-- Fondo -->
        <Canvas.Background>
            <ImageBrush ImageSource="pack://application:,,,/BuildM;component/Recursos/SOLICITUD.png"
                        Stretch="Fill"/>
        </Canvas.Background>

        <!-- Nombre Proyecto -->
        <Label Content="Nombre del Proyecto:" Canvas.Left="299" Canvas.Top="124" FontWeight="Bold" Height="23" Width="136" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNombreProyecto" Width="306" Height="22"
                 Canvas.Left="440" Canvas.Top="125" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <!-- Material -->
        <Label Content="Material:" Canvas.Left="300" Canvas.Top="161" FontWeight="Bold" Height="23" Width="62" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbMateriales" Width="306" Height="22"
                  Canvas.Left="380" Canvas.Top="162" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Cantidad -->
        <Label Content="Cantidad:" Canvas.Left="299" Canvas.Top="198" FontWeight="Bold" Height="23" Width="65" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCantidad" Width="102" Height="22"
                 Canvas.Left="380" Canvas.Top="199" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Botones -->
        <Button Content="Agregar" Canvas.Left="501" Canvas.Top="199"
                Width="101" Height="22" Background="#1e3a5f" Foreground="White"
                Click="BtnAgregar_Click" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Button Content="Enviar" Canvas.Left="371" Canvas.Top="450"
                Width="76" Height="23" Background="#2ecc71" Foreground="White"
                Click="BtnEnviar_Click"/>

        <Button Content="Cancelar" Canvas.Left="463" Canvas.Top="450"
                Width="76" Height="23" Background="#e74c3c" Foreground="White"
                Click="BtnCancelar_Click"/>

        <!-- Tabla Detalle -->
        <DataGrid x:Name="dgSolicitud" Canvas.Left="292" Canvas.Top="242" 
                  Width="464" Height="167" AutoGenerateColumns="False"
                  CanUserAddRows="False" IsReadOnly="True" HorizontalAlignment="Left" VerticalAlignment="Center">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Material" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="80"/>
                <DataGridTextColumn Header="Precio Unitario" Binding="{Binding Precio}" Width="100"/>
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Total -->
        <Label x:Name="lblTotal" Content="Total: $0.00" 
               FontWeight="Bold" FontSize="16"
               Canvas.Left="612" Canvas.Top="197" Height="35" Width="149" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="SOLICITUD" Canvas.Left="430" Canvas.Top="59" HorizontalAlignment="Center" Height="51" VerticalAlignment="Top" Width="206" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="36" Foreground="White"/>
    </Canvas>
</Window>
