<Window x:Class="BuildM.IGU.Solicitud"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Solicitud de Materiales" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">

    <Canvas>
        <!-- Fondo
        <Canvas.Background>
            <ImageBrush ImageSource="pack://application:,,,/BuildM;component/Recursos/FondoSolicitud.png" Stretch="Fill"/>
        </Canvas.Background-->

        <!-- Proyecto -->
        <TextBlock Text="Proyecto:" FontWeight="Bold" 
                   Canvas.Left="50" Canvas.Top="50"/>
        <TextBox x:Name="txtProyecto" Width="250" Height="25"
                 Canvas.Left="150" Canvas.Top="45"/>

        <!-- Material -->
        <TextBlock Text="Material:" FontWeight="Bold"
                   Canvas.Left="50" Canvas.Top="100"/>
        <ComboBox x:Name="cmbMaterial" Width="250" Height="25"
                  Canvas.Left="150" Canvas.Top="95"/>

        <!-- Cantidad -->
        <TextBlock Text="Cantidad:" FontWeight="Bold"
                   Canvas.Left="50" Canvas.Top="150"/>
        <TextBox x:Name="txtCantidad" Width="100" Height="25"
                 Canvas.Left="150" Canvas.Top="145"/>

        <!-- Botones -->
        <Button Content="Agregar" Width="100" Height="30"
                Canvas.Left="270" Canvas.Top="145"
                Click="BtnAgregar_Click"/>

        <Button Content="Enviar Solicitud" Width="150" Height="30"
                Canvas.Left="150" Canvas.Top="200"
                Click="BtnEnviar_Click"/>

        <Button Content="Cancelar" Width="100" Height="30"
                Canvas.Left="310" Canvas.Top="200"
                Click="BtnCancelar_Click"/>

        <!-- Lista de materiales solicitados -->
        <ListView x:Name="lvDetalles" Width="380" Height="120"
                  Canvas.Left="50" Canvas.Top="250">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Material" DisplayMemberBinding="{Binding Material}" Width="150"/>
                    <GridViewColumn Header="Cantidad" DisplayMemberBinding="{Binding Cantidad}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Canvas>
</Window>
