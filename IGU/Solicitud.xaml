<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="BuildM.IGU.Solicitud"
        WindowStartupLocation="CenterScreen"
        Title="SolicitudMateriales" Height="450" Width="800">

    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="pack://application:,,,/BuildM;component/Recursos/SOLICITUD.png"
                        Stretch="Fill"/>
        </Canvas.Background>

        <!-- Título -->
        <Button Content="Solicitud de Materiales" BorderBrush="Transparent" 
                FontSize="15" Foreground="White" FontWeight="Bold" 
                Background="#1e3a5f" Width="183" Height="43"
                Canvas.Left="81" Canvas.Top="145"/>

        <!-- Material -->
        <Label Content="Material :" FontSize="17" FontWeight="Bold"
               Canvas.Left="308" Canvas.Top="112"/>
        <TextBox x:Name="txtMaterial" Width="361" Height="22"
                 TextWrapping="Wrap"
                 Canvas.Left="308" Canvas.Top="142"/>

        <!-- Cantidad -->
        <Label Content="Cantidad :" FontSize="17" FontWeight="Bold"
               Canvas.Left="308" Canvas.Top="163"/>
        <TextBox x:Name="txtCantidad" Width="166" Height="22"
                 TextWrapping="Wrap"
                 Canvas.Left="308" Canvas.Top="198"/>

        <!-- Botones -->
        <Button Content="Aceptar" Background="#fde89e" BorderBrush="Transparent"
                Width="116" Height="28"
                Canvas.Left="308" Canvas.Top="235"
                Click="BtnAgregar_Click"/>

        <Button Content="Enviar" Background="#fcd75b" BorderBrush="Transparent"
                Width="116" Height="28"
                Canvas.Left="431" Canvas.Top="235"/>

        <Button Content="Cancelar" Background="#fbc215" BorderBrush="Transparent"
                Width="116" Height="28"
                Canvas.Left="553" Canvas.Top="235"/>
        <DataGrid Height="111" Canvas.Left="308" Canvas.Top="268" Width="361" av:ItemsSource="{av:SampleData ItemCount=5}"/>
    </Canvas>
</Window>
